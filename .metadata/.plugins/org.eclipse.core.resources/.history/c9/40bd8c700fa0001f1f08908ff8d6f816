package com.example.demo;

import com.example.demo.BloodStock;
import jakarta.persistence.EntityManager;
import jakarta.persistence.PersistenceContext;
import jakarta.transaction.Transactional;
import org.springframework.stereotype.Service;

import java.util.List;

@Service
public class BloodStockServices {

    @PersistenceContext
    private EntityManager entityManager;

    // Retrieve all blood stocks
    public List<BloodStock> getAllBloodStocks() {
        return entityManager.createQuery("SELECT bs FROM BloodStock bs", BloodStock.class).getResultList();
    }

    // Find blood stocks by blood group
    public List<BloodStock> findBloodStockByBloodGroup(String bloodGroup) {
        return entityManager.createQuery("SELECT bs FROM BloodStock bs WHERE bs.bloodGroup = :bloodGroup", BloodStock.class)
                .setParameter("bloodGroup", bloodGroup)
                .getResultList();
    }

    // Save a new blood stock
    @Transactional
    public void saveBloodStock(BloodStock bloodStock) {
        entityManager.persist(bloodStock);
    }

    // Update a blood stock
    @Transactional
    public void updateBloodStock(BloodStock bloodStock) {
        entityManager.merge(bloodStock);
    }

    // Delete a blood stock
    @Transactional
    public void deleteBloodStock(BloodStock bloodStock) {
        entityManager.remove(entityManager.contains(bloodStock) ? bloodStock : entityManager.merge(bloodStock));
    }
}
