package com.example.demo;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;

import java.util.List;

@Controller
@RequestMapping("/bloodstock")
public class BloodStockController {

    @Autowired
    private BloodStockServices bloodStockServices;

    // Handle form submission to create a new BloodStock record
    @PostMapping
    public String createBloodStock(BloodStock bloodStock) {
        bloodStockServices.saveBloodStock(bloodStock);
        return "redirect:/bloodstock/all";
    }

    // Display all BloodStock records
    @GetMapping("/all")
    public String getAllBloodStock(Model model) {
        List<BloodStock> bloodStocks = bloodStockServices.getAllBloodStock();
        model.addAttribute("bloodStocks", bloodStocks);
        return "bloodstock-list";
    }

    // Delete a BloodStock record by blood group
    @PostMapping("/delete")
    public String deleteBloodStock(@RequestParam String bloodGroup) {
        bloodStockServices.deleteBloodStock(bloodGroup);
        return "redirect:/bloodstock/all";
    }
}
